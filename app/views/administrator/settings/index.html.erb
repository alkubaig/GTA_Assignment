<h2>Settings</h2>

<div class="well">
    <h3> Current Term is <%= @current_term %></h3>
</div>
<div class="well">
  <h4>Users Management</h4>

  <%= link_to "Manage GTAs", administrator_users_path(:status => "Student"), class: "btn btn-primary" %>
  <%= link_to "Manage Instructors", administrator_users_path(:status => "Instructor"), class: "btn btn-primary"%>
   <%= link_to "Manage Admins", administrator_users_path(:status => "Administrator"), class: "btn btn-primary"%> 
  <%= link_to "Manage All Users", administrator_users_path(:status => "all"), class: "btn btn-primary" %>
<br><br>
</div>




<div class="well">
    
  <h4>Change Current Term</h4>
  
  <%= form_tag update_term_administrator_white_courses_path, method: "post" do %>
    <div class="form-group">
    Term 
    <%= select_tag :term,
      options_for_select(["winter", "summer", "spring", "fall"],selected = @select_term) ,class: "form-control" %>
    </div>
     <div class="form-group">
    Year 
    <%= select_tag :year,
      options_for_select([Time.new.year - 1, Time.new.year, Time.new.year + 1], selected = @select_year) , class: "form-control" %>
    </div>
    <%= submit_tag "Update Term", class: "btn btn-primary" %>
  <% end %>
</div>


<div class="well">
  <h4>Courses General Settings</h4>

  <p>Courses whitelist, cross-listed courses and constants configurations. </p>
    <%= link_to "Whitelist Courses and Constants Settings", administrator_white_courses_path, class: "btn btn-primary"  %>
    <%= link_to "Cross-listed Settings", cross_listed_administrator_white_courses_path, class: "btn btn-primary"  %>

  
</div>


<div class="well">
  <h4>Export sectinons</h4>

  <%= link_to "Export Sections",
    administrator_settings_sections_path(format: "xlsx"),
    class: "btn btn-primary" %>

</div>

<div class="well">

 <h4>Data Management</h4>
 
  <%= link_to "Manage Skills", skills_path, class: "btn btn-primary" %>
</div>

<div class="well">
  <h4>Export Preferences</h4>

  <p>Export Student and Instructor preferences in Excel format.</p>

  <%= link_to "Export CS Section Preferences",
    administrator_settings_section_preferences_cs_path(format: "xlsx"),
    class: "btn btn-primary" %>
    
      <%= link_to "Export ECE Section Preferences",
    administrator_settings_section_preferences_ece_path(format: "xlsx"),
    class: "btn btn-primary" %>

  <%= link_to "Export Student Preferences",
    administrator_settings_student_preferences_path(format: "xlsx"),
    class: "btn btn-primary" %>
</div>


